{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "ESNext",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "lib": [
      "ESNext",
      "dom"
    ],
  },
  "exclude": [
    "spec",
    "dist",
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ],
}